public class LargestElement {

    public static void main(String[] args) {
        int[] arr = {10, 4, 2, 9, 7};
        int max = arr[0];

        for (int i = 1; i < arr.length; i++) {
            if (arr[i] > max) {
                max = arr[i];
            }
        }

        System.out.println("The largest element in the array is " + max);
    }
}
